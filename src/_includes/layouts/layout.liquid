<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if title %}
      <title>{{ title }}</title>
    {% else %}
      <title>{{ metadata.title }}</title>
    {% endif %}
    <meta name="description" content="{{ description | default: metadata.description }}">

    <!-- Open Graph -->
    <meta property="og:title" content="{{ title | default: metadata.title }}">
    <meta property="og:description" content="{{ description | default: metadata.description }}">
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
    <meta property="og:type" content="{% if title %}article{% else %}website{% endif %}">
    <meta property="og:site_name" content="{{ metadata.title }}">
    <meta property="og:image" content="{{ metadata.url }}{{ image | default: '/media/og-image.png' }}">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title | default: metadata.title }}">
    <meta name="twitter:description" content="{{ description | default: metadata.description }}">
    <meta name="twitter:image" content="{{ metadata.url }}{{ image | default: '/media/og-image.png' }}">

    <link href="/media/favicon_io/favicon-32x32.png" rel="icon" sizes="32x32">
    <link rel="stylesheet" href="/css/prism.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.6.0/dist/katex.min.css">
    <link rel="alternate" href="{{ metadata.feed.path }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
      <h2>
        <span class="badge">
          <a class="title" href="/">{{ metadata.title }}</a>
        </span>
      </h2>
    </header>
    <main class="{{ templateClass }}">

      {{ content }}

    </main>
    {% if hasTOC %}
      <span class="toc-tag"><a href="#toc">&#8593;</a></span>
    {% endif %}
    <footer>
      <ul>
        <li>
          <a href="{{ metadata.feed.path  }}">rss</a>
        <li>
          <a class="contact" target="_blank" href="{{ metadata.source.url }}">source</a>
        </li>
        <li>
          <a href="{{ metadata.source.post }}">how was I built?</a>
        </li>
        <li>
          <a class="contact" target="_blank" href="{{ metadata.author.twitter }}">twitter</a>
        </li>
        <li>
          <a class="contact" target="_blank" href="{{ metadata.author.stackoverflow }}">stackoverflow</a>
        </li>
        <li>
          <a class="contact" target="_blank" href="mailto:{{ metadata.author.email }}">email</a>
        </li>
      </ul>
    </footer>
  </body>
</html>
