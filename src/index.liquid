---
layout: layouts/layout.liquid
templateClass: post-list
---
<ul>
    {% assign year = 0 %}
    {% for post in collections.post reversed %}
        {% assign postyear = post.data.date | date: "%Y" %}
        {% if postyear != year %}
        <li class="year-title">
            <span>{{ postyear }}</span>
        </li>
            {% assign year = postyear  %}
        {% endif %}
    <li class="entry">
        <span class="name"><a href="{{ post.url }}">{{ post.data.title }}</a></span>
        <span class="date">{{ post.data.date | date:  "%b %e" }}</span>
    </li>
  {% endfor %}
</ul>